pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                echo 'Cloning the Git repository...'
                git 'https://github.com/Skinny911/pipeline_project.git'
            }
        }

        stage('Build Application') {
            steps {
                echo 'Building the application using Docker...'
                sh 'docker build -t python-calculator-app .'
            }
        }

        stage('Run Tests') {
            steps {
                echo 'Running unit tests...'
                // Ensure pytest generates results in JUnit XML format
                sh 'pytest tests/ --junitxml=test-results/results.xml'
            }
        }

        stage('Archive Results') {
            steps {
                echo 'Archiving test results...'
                // Archive test results and other artifacts
                archiveArtifacts artifacts: '**/test-results/*.xml', allowEmptyArchive: true
                junit 'test-results/*.xml'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up after pipeline execution...'
            cleanWs() // Clean up workspace
        }

        success {
            echo 'Pipeline executed successfully!'
        }

        failure {
            echo 'Pipeline failed. Check the logs for details.'
        }
    }
}
