pipeline {
    agent {
        docker { image 'python:3.10' }
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/Skinny911/pipeline_project.git'
            }
        }

        stage('Set Up Environment') {
            steps {
                sh '''
                python -m venv venv
                source venv/bin/activate
                pip install --upgrade pip
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                source venv/bin/activate
                python -m unittest discover -s tests -p "test_*.py" > test_results.txt
                '''
            }
        }

        stage('Archive Results') {
            steps {
                archiveArtifacts artifacts: 'test_results.txt', fingerprint: true
            }
        }
    }

    post {
        always {
            sh 'rm -rf venv'
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs and test results for more details.'
        }
    }
}
